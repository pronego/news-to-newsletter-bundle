{
  "name": "srhinow/news-to-newsletter-bundle",
  "description": "a tool to generate a Newsletter from all flagged News",
  "keywords": ["contao", "news","nesletter"],
  "type": "contao-module",
  "license": "LGPL-3.0+",
  "authors":[
    {
      "name":"Sven Rhinow",
      "homepage":"https://www.sr-tag.de",
      "role":"Developer"
    }
  ],
  "support":{
    "email": "kservice@sr-tag.de",
    "source":"https://gitlab.com/srhinow/news-to-newsletter-bundle"
  },
  "require": {
    "php": ">=7.2",
    "contao/core-bundle": "~3.5 || ~4.4",
    "contao-community-alliance/composer-plugin":"~2.4 || ~3.0",
    "contao/news-bundle": "^4.4",
    "contao/newsletter-bundle": "^4.4"
  },
  "autoload": {
    "psr-4": {
      "Srhinow\\NewsToNewsletterBundle\\": "src/"
    },
    "classmap": [
      "src/Resources/contao/"
    ],
    "exclude-from-classmap": [
      "src/Resources/contao/config/",
      "src/Resources/contao/languages/",
      "src/Resources/contao/templates/"
    ]
  },
  "extra": {
    "contao-manager-plugin": "Srhinow\\NewsToNewsletterBundle\\ContaoManager\\Plugin"
  }
}
